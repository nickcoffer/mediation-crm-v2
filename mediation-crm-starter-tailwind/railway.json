{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Build phase complete'",
    "watchPatterns": [
      "backend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd backend && python manage.py migrate && python manage.py ensure_admin && gunicorn mediation_crm.wsgi:application --bind 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "8000",
        "DJANGO_SETTINGS_MODULE": "mediation_crm.settings",
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}
